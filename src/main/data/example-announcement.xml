<!-- For some reason I can't put this as an attribute in topic.  When it is present, the XML is not parsed or read
     and no error message occurs.  You only get an empty Topic record.
     xmlns="http://www.uPortal.org/schema/announcement/topic.xsd"
-->
<announcement
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.uPortal.org/schema/announcement/announcement http://www.uPortal.org/schema/announcement/announcement.xsd">
    <!--<topic>-->
        <!--<title>Academic Notices</title>-->
    <!--</topic>-->
    <startDisplay>2013-07-01</startDisplay>
    <endDisplay>2013-08-30</endDisplay>
    <title>Announcement imported separate from title</title>
    <abstract>Announcement message imported that references an existing topic</abstract>
    <message>This is a simple announcement message.  The message is not very complex.</message>
    <published>true</published>
    <topic>
        <title>Academic Notices</title>
        <description>Notices to all students, faculty, and staff</description>
        <allowRss>true</allowRss>
        <subscriptionMethod>2</subscriptionMethod>
    </topic>
</announcement>